<div class="container">

<header>
    <h1> <%= link_to "Wikinimous", articles_path %></h1>
    <%= link_to 'Add new article', new_article_path, class: "button" %>
</header>

<ul>
  <% @articles.each do |article| %>
    <li>
    <h2><%= link_to "#{article.title}", article_path(article["id"]) %></h2>
    <p class="edit-delete"><%= link_to "Edit", edit_article_path(article["id"]), class: "edit-delete" %> |
    <%= link_to "Delete", article_path(article["id"]), class: "edit-delete", method: :delete, data: { confirm: "Are you sure?" } %></p>
    </li>
  <% end %>
</ul>

</div>
<footer>
  <p>Wikinimous - <%= Time.now.strftime("%d/%m/%Y %H:%M") %></p>
</footer>
